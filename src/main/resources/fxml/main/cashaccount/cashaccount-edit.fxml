<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.xmc.fe.ui.components.ImageSelectionButton?>
<?import org.xmc.fe.ui.validation.components.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="541.0"
      prefWidth="719.0" stylesheets="@/css/xmc-base.css" xmlns="http://javafx.com/javafx/11.0.0"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.xmc.fe.stages.main.cashaccount.CashAccountEditController">

    <Label text="%cashaccount.edit.bank">
        <padding>
            <Insets bottom="5.0"/>
        </padding>
    </Label>
    <ValidationComboBox fx:id="bankComboBox" prefHeight="25.0" prefWidth="719.0" required="false" visibleRowCount="5">
        <VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
    </ValidationComboBox>
    <TitledPane fx:id="bankTitledPane" animated="false" collapsible="false" prefHeight="217.0"
                text="%cashaccount.edit.bank.details">
        <HBox>
            <ImageSelectionButton fx:id="logoButton" fitHeight="32.0" fitWidth="32.0" maxHeight="64.0" maxWidth="64.0"
                                  messageKey="CASHACCOUNT_EDIT_BANK_LOGO" mnemonicParsing="false" prefHeight="64.0"
                                  prefWidth="64.0">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </ImageSelectionButton>

            <VBox HBox.hgrow="ALWAYS">
                <Label text="%cashaccount.edit.bank.name">
                    <padding>
                        <Insets bottom="5.0"/>
                    </padding>
                </Label>
                <ValidationTextField fx:id="bankNameTextfield" maxLength="255"/>
                <Label styleClass="form-label" text="%cashaccount.edit.bank.bic"/>
                <ValidationAutoComplete fx:id="bankBicComboBox"
                                        autoCompleteController="org.xmc.fe.stages.main.cashaccount.autocomplete.BicAutoCompleteController"
                                        maxLength="255"
                                        visibleRowCount="5" autoCompleteLimit="100"/>
                <Label styleClass="form-label" text="%cashaccount.edit.bank.blz"/>
                <ValidationAutoComplete fx:id="bankBlzComboBox"
                                        autoCompleteController="org.xmc.fe.stages.main.cashaccount.autocomplete.BlzAutoCompleteController"
                                        maxLength="255"
                                        visibleRowCount="5" autoCompleteLimit="100"/>
            </VBox>
        </HBox>
    </TitledPane>

    <Label styleClass="form-label" text="%cashaccount.edit.name"/>
    <ValidationTextField fx:id="cashAccountNameTextfield" maxLength="255" required="true"/>
    <Label styleClass="form-label" text="%cashaccount.edit.iban"/>
    <ValidationTextField fx:id="cashAccountIbanTextfield" maxLength="255" required="false"/>
    <Label styleClass="form-label" text="%cashaccount.edit.number"/>
    <ValidationTextField fx:id="cashAccountNumberTextfield" maxLength="255" required="false"/>
    <Label styleClass="form-label" text="%cashaccount.edit.currency"/>
    <ValidationAutoComplete fx:id="cashAccountCurrencyComboBox"
                            autoCompleteController="org.xmc.fe.stages.main.cashaccount.autocomplete.CurrencyAutoCompleteController"
                            required="true" visibleRowCount="5"/>
</VBox>
