<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.VBox?>
<?import org.xmc.fe.ui.components.table.*?>
<VBox prefHeight="700.0" prefWidth="900.0" stylesheets="@/css/xmc-base.css,@/css/main/main.css"
      xmlns="http://javafx.com/javafx/11.0.0" fx:id="cashaccountContentContainer" VBox.vgrow="ALWAYS"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.xmc.fe.stages.main.cashaccount.CashAccountTransactionsController">

    <ToolBar styleClass="toolbar">
        <Button text="%main.cashaccounts.transactions.create" onAction="#onNewTransaction">
            <graphic>
                <ImageView>
                    <Image url="@/images/feather/plus.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button text="%main.cashaccounts.transactions.edit" fx:id="editButton" onAction="#onEditTransaction">
            <graphic>
                <ImageView>
                    <Image url="@/images/feather/edit.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button text="%main.cashaccounts.transactions.delete" fx:id="deleteButton" onAction="#onDeleteTransaction">
            <graphic>
                <ImageView>
                    <Image url="@/images/feather/delete.png"/>
                </ImageView>
            </graphic>
        </Button>
    </ToolBar>

    <TableViewEx VBox.vgrow="ALWAYS" fx:id="tableView"
                 fieldEnumType="org.xmc.common.stubs.cashaccount.transactions.CashAccountTransactionOverviewFields">
        <columns>
            <TableColumnEx editable="false" prefWidth="50" sortable="false" resizable="false">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="category.icon" fitToWidth="24" fitToHeight="24"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.categoryName"
                           sortField="CATEGORY_NAME">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="category.name"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.valutaDate"
                           sortField="VALUTA_DATE">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="valutaDate"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.usage"
                           sortField="USAGE">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="usage"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.value"
                           sortField="VALUE">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="value" formatAsCurrency="true"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.description"
                           sortField="DESCRIPTION">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="description"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" sortable="false" text="%main.cashaccounts.transactions.overview.table.column.saldoBefore">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="saldoBefore" formatAsCurrency="true"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" sortable="false" text="%main.cashaccounts.transactions.overview.table.column.saldoAfter">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="saldoAfter" formatAsCurrency="true"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.referenceBank"
                           sortField="REFERENCE_BANK">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="referenceBank.name"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.referenceIban"
                           sortField="REFERENCE_IBAN">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="referenceBank.bic"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.reference"
                           sortField="REFERENCE">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="reference"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.creditorIdentifier"
                           sortField="CREDITOR_IDENTIFIER">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="creditorIdentifier"/>
                </cellValueFactory>
            </TableColumnEx>
            <TableColumnEx editable="false" text="%main.cashaccounts.transactions.overview.table.column.mandate"
                           sortField="MANDATE">
                <cellValueFactory>
                    <NestedPropertyValueFactory property="mandate"/>
                </cellValueFactory>
            </TableColumnEx>
        </columns>
    </TableViewEx>

</VBox>
